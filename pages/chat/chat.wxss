/*今日搜索框*/
.bg{
  background-color: #FF1493;
  height: 40px;
  display: flex;
  flex-direction: row;
}
.name{
  width: 30%;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  font-size: 20px;
}
.search{
  width: 52%;
  display: flex;
  flex-direction: row;
  border: 1px solid #cccccc;
  height: 25px;
  margin-left: 10px;
  background-color: #f6f5f3;
  border-radius: 5px;
  align-items: center;
}
.search image{
  margin-left: 10px;
}
.search input{
  margin-left: 10px;
  font-size: 13px;
}

/*滑动导航*/
.navbg{
  background-color: #f6f5f3;
  height: 36px;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.nav{
  width: 85%;
  height: 36px;
}
.scroll-view-H{
  height: 40px;
  display: flex;
  flex-direction: row;
  margin-left: 5px;
}
.normal{
  width: 60px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
}
.select{
   width: 60px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
  font-weight: bold;
}

/*推荐*/
.item {
  display: flex;
  flex-direction: row;
}
.order {
  padding-top: 15px;
  padding-left: 15px;
  padding-bottom: 15px;
  font-size: 13px;
  color: #FF1493;
}
.xian {
  border: 1px solid #ccc;
  opacity: 0.2;
}
.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.grid-container{
  height: 1050rpx;
  margin:40rpx 0 40rpx 6rpx;
}
.title{
  color: #444444;
  font-size: 18px;
  padding-left: 10px;
  padding-top: 5px;
}
.subtitle{
  padding-top: 3px;
  color: #adadad;
  font-size: 12px;
  padding-left: 10px;
}
.info{
  margin-top: 15px;
  display: flex;
  flex-direction: row;
}
.pic image{
  border-radius: 10px;
}
.info .pic{
  margin-left: 10px;
}
.share{
  color: #adadad;
  font-size: 10px;
  margin-left: 8px;
}
.add_img{
  position: absolute;
  right: 4px;
}
