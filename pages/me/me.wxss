/*上面部分*/

.bg {
  width: 100%;
  height: 100px;
  background-color: #ff1493;
}

.head {
  display: flex;
  flex-direction: row;
}

.head image {
  border-radius: 50%;
  margin-left: 10px;
}

.login {
  color: #fff;
  font-size: 15px;
  position: absolute;
  left: 100px;
  margin-top: 30px;
}

.detail {
  color: #fff;
  font-size: 15px;
  font-weight: bold;
  position: absolute;
  right: 15px;
  margin-top: 30px;
}

.item {
  display: flex;
  flex-direction: row;
}

.z_img {
  margin-left: 10px;
  margin-top: 12px;
}

/*列表*/

.hr {
  width: 100%;
  height: 15rpx;
  background-color: #f4f5f6;
}
.order {
  padding-top: 15px;
  padding-left: 15px;
  padding-bottom: 15px;
  font-size: 15px;
}

.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}

.xian {
  border: 1px solid #ccc;
  opacity: 0.2;
}

button {
  position: relative;
  height: 73rpx;
  margin-top: 45rpx;
  margin-left: 65rpx;
  margin-right: auto;
  padding-left: 9px;
  padding-right: 9px;
  padding-top: -15rpx;
  padding-bottom: -46rpx;
  box-sizing: border-box;
  font-size: 16px;
  text-align: center;
  text-decoration: none;
  line-height: 73rpx;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #ffffff;
  background-color: #FF1493;
}

button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}
