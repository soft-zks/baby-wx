.content {
  font-family: 'Microsoft YaHei';
}

.hr {
  height: 10px;
  background-color: #f5f5f5;
}

.bg {
  width: 100%;
  height: 63px;
}

.head {
  display: flex;
  flex-direction: row;
}

.headIcon {
  margin: 5px;
}

.headIcon image {
  border-radius: 50px;
  position: absolute;
  right: 10px;
}

.name {
  font-size: 15px;
  font-weight: bold;
  line-height: 63px;
  padding-left: 10px;
}

.detail {
  font-size: 15px;
  position: absolute;
  right: 10px;
  line-height: 100px;
}

.nav {
  display: flex;
  flex-direction: row;
  text-align: center;
}

.nav-item {
  width: 25%;
  font-size: 13px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.item {
  display: flex;
  flex-direction: row;
}

.order {
  padding-top: 10px;
  padding-left: 10px;
  padding-bottom: 10px;
  font-size: 15px;
}

.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 40px;
  line-height: 40px;
  color: #888;
}

.xian {
  border: 1px solid #ccc;
  opacity: 0.2;
}
button{
  margin: 0;
  padding: 0;
}
.z_input{
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 40px;
  line-height: 40px;
  color: #888;
  margin-top: 10px;
}
.z_input2{
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 40px;
  color: #888;
}
.z_input_content{
  text-align: right;
  line-height: 40px;
}
.btn{
  width: 100%;
  position: absolute;
  bottom: 0px;
  left: 0px;
  background-color: #FF1493;
  color: #ffffff;
}
.picker{
  line-height: 40px;
}
.hid{
  display: none;
}